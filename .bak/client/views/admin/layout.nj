<!DOCTYPE html>
<html>
<head>
  <title>{{ title }}</title>
  <link rel='shortcut icon' href='/img/finger.png'>
  <link rel='stylesheet' href='//cdnjs.cloudflare.com/ajax/libs/normalize/7.0.0/normalize.min.css'>
  <link rel='stylesheet' href='/style/admin/base.css'>
  <link rel='stylesheet' href='/style/admin/app.css'>

  {% block style %}
  {% endblock %}

</head>
<body>
  {% block header %}
    <header id='header'>
      <nav>
        <a href='/admin/list'><h1>赵的拇指</h1></a>
        <a href='/admin/list'>文章列表</a>
        <a href='/admin/edit'>新文章</a>
        <a href='/admin/photo'>新照片</a>
        <a href='/admin/film'>新电影</a>
        <a href='/admin/user' class='user'>{{ userInfo.nickname }}</a>
      </nav>
    </header>
  {% endblock %}
  <div id='content'>
    {% block content %}
    {% endblock %}
  </div>
  <footer id='footer'>
  </footer>

  <script src='//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
  <script>
    var IMG_PRE = '{{ IMG_PRE }}';
    var IMG_TYPE = {
      PHOTOGRAPHY: 1,
      ARTICLE_CONTENT: 2,
      ARTICLE_COVER: 3,
      FILM: 4
    };
  </script>
  {% block script %}
  {% endblock %}
</body>
</html>
